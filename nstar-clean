#!/bin/bash
# nstar-clean - Just an orchestrator loop with task graph and events

cd "$(dirname "$0")"

case "${1:-help}" in
    "run")
        if [ -z "$2" ]; then
            echo "Usage: ./nstar-clean run \"Your goal\""
            exit 1
        fi
        echo "ðŸŽ¯ Orchestrating: $2"
        node nstar-orchestrator.mjs "$2" "${3:-fast}"
        ;;
        
    "demo")
        echo "ðŸš€ Running orchestrator demo..."
        node orchestrator.mjs demo
        ;;
        
    *)
        echo "nstar-clean - Simple Orchestrator Loop"
        echo ""
        echo "Commands:"
        echo "  run \"goal\"    - Run orchestrated task"
        echo "  demo          - Show orchestrator demo"
        echo ""
        echo "Examples:"
        echo "  ./nstar-clean run \"Add tests\""
        echo "  ./nstar-clean demo"
        echo ""
        echo "What it does:"
        echo "  â€¢ Task graph with dependencies"
        echo "  â€¢ Event-driven execution"
        echo "  â€¢ Parallel task processing"
        echo "  â€¢ Real-time status updates"
        ;;
esac
